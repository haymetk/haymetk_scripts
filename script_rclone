#!/bin/bash

echo "==============================================="
echo "      SCRIPT DE SINCRONIZACIÓN EN LA NUBE       "
echo "==============================================="
echo
echo "  [1] Sincronizar datos de la nube al equipo"
echo "  [2] Sincronizar datos del equipo a la nube"
echo
echo "-----------------------------------------------"
read -p "  Seleccione una opción: " sincronizacion
echo "-----------------------------------------------"
echo
if [ "$sincronizacion" -eq 1 ]; then
    echo ">> Iniciando sincronización: NUBE -> EQUIPO"
    echo
    rclone sync gdrive:/ /home/usuario/MiNube --progress
    echo
    echo ">> Sincronización completada correctamente"
elif [ "$sincronizacion" -eq 2 ]; then
    echo ">> Iniciando sincronización: EQUIPO -> NUBE"
    echo
    rclone sync /home/usuario/MiNube gdrive:/ --progress
    echo
    echo ">> Sincronización completada correctamente"
else
    echo "!! Opción no válida. Intente nuevamente."
fi
echo
echo "==============================================="
echo "            FIN DEL PROCESO                    "
echo "==============================================="
